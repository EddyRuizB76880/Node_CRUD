

<form method="POST" action="/<%= action %>">
    <div class="form-field">
        <label for="title" >Title</label>
        <input id="title" 
                placeholder="Title here" 
                name="title" 
                type="text" 
                required
                <%if(action === 'view'){%> disabled <%}%> 
                value="<%if(locals.post){%><%= post.title.trim()%><%}%>"
    />
    </div>

    <div class="form-field">
        <label for="content" >Post content</label>
        <textarea id="content" 
                placeholder="Write your post here."
                name="content" 
                class="form-control-lg"
                rows="1"
                required
                <%if(action === 'view'){%> disabled <%}%> 
                ><%if(locals.post){%><%=post.content.trim()%><%}%></textarea>
    </div>
    
    <div class="form-field">
        <label for="imgUrl" >Post's image</label>
        <input id="imgUrl" 
                placeholder="(Optional) The URL to an image  that represents your post's topic" 
                name="imgUrl" 
                type="text" 
                <%if(action === 'view'){%> disabled <%}%> 
                value="<%if(locals.post){%><%= post.imgUrl.trim()%><%}%>"
    />
    </div>

    <% if (action !== 'view'){ %>
        <button class='btn btn-primary' id='formButton' type="submit">Save post</button>
    <% } %>
</form>
