<%- include('partials/header.ejs') %>

<%- include('partials/overlay.ejs') %>



<% if (existingBlogs.size === 0){ %>
    <h1> Create your own posts. </h1>
<%} else { %>
    <h1>Your posts</h1>
    <div id = 'postGallery'>
    <% for(post of existingBlogs.entries()){ %>

        <div class="card post" style="width: 18rem; height: 25rem">
            <img class="card-img-top" src="<%= post[1].imgUrl %>" alt="Card image cap">
            <div class="card-body">
            <h5 class="card-title"><%= post[1].title %></h5>
            <div class="col">
                <a href="/view/<%= post[0]%>" class="btn btn-primary"><i class="bi bi-book-fill"></i></a>
                <a href="/edit/<%= post[0]%>" class="btn btn-primary"><i class="bi bi-pencil-fill"></i></a>
                <button class='deleteButton btn btn-outline-danger' id="<%=post[0]%>"><i id="<%=post[0]%>" class="bi bi-trash3"></i></button>
            </div>
            </div>
          </div>
    <%} %>
    </div>
<% } %>

<a id="createButton" class="btn btn-primary" href = '/create'> <i class="bi bi-plus-circle-fill"></i> Create post </a>
<script src="/js/utilities.js" type="text/javascript"></script>

<%- include('partials/footer.ejs') %>